{
    "name": "hive-builder template container",
    "dockerFile": "Dockerfile",
    "overrideCommand": false,
    "privileged": true,
    "customizations": {
        "vscode": {
            "extensions": [
                "redhat.ansible",
                "redhat.vscode-yaml"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/hive/bin/python",
                "python.terminal.activateEnvInCurrentTerminal": true,
                "autopep8.args": [
                    "--max-line-length=200"
                ]
            }
        }
    }
}